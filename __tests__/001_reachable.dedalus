% this example was adopted from the "Datalog and Recursive Query Processing" paper, page 121

link(a, b)@1.
link(b, c)@1.
link(c, c)@1.
link(c, d)@1.

reachable(X,Y) <-
  link(X, Y);

reachable(X,Y) <-
  link(X,Z),
  reachable(Z,Y);

node(X) <- link(X, _);
node(Y) <- link(_, Y);

unreachable(X, Y) <-
  node(X),
  node(Y),
  not reachable(X, Y);



test_passed <-
  reachable(a, d),
  reachable(a, c),
  unreachable(d, a),
  unreachable(c, b);
