% Parent, Child
edge(1, 2)@1;
edge(2, 3)@1;
edge(2, 4)@1;
edge(-1, 2)@1;
edge(1, 5)@1;
edge(4, 6)@1;

vertex(A) :- edge(A, _);
vertex(A) :- edge(_, A);

top(Vertex) :-
  vertex(Vertex),
  notin edge(_Parent, Vertex);

test_passed :-
  top(1),
  top(-1);

test_failed(A) :-
  top(A),
  A =/= 1,
  A =/= -1;
